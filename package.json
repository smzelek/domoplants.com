{
  "name": "domoplants.com",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "engineStrict": true,
  "scripts": {
    "start:webapp": "vite",
    "start:service": "nodemon --ignore src/frontend/ src/service/main.ts",
    "generate:db": "drizzle-kit generate:pg --config src/database/drizzle.config.ts",
    "migrate:db": "node --import tsx src/database/migrate.ts",
    "seed:db": "node --import tsx src/database/seed_db.ts",
    "test": "glob -c \"node --import tsx --test\" \"./src/**/*.test.ts[x]\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:webapp": "tsc && vite build",
    "build:service": "tsc --p src/service/tsconfig.json",
    "build": "npm run build:service",
    "start": "node build/src/service/main.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.9",
    "@uidotdev/usehooks": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "postgres": "^3.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.20.0",
    "react-tooltip": "^5.26.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/debounce": "^1.2.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "drizzle-kit": "^0.20.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "glob": "^10.3.12",
    "msw": "^2.0.10",
    "nodemon": "^3.0.1",
    "sass": "^1.50.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.2.0",
    "typescript": "^5.2.0",
    "typescript-plugin-css-modules": "^5.0.2",
    "vite": "^5.0.10"
  }
}
